{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020"],
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "experimentalDecorators": true,        // ✅ Добавь
    "emitDecoratorMetadata": true          // ✅ Добавь
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}