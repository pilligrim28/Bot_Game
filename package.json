{
  "name": "telegram-bot",
  "version": "1.0.0",
  "description": "Telegram Bot + Admin Panel",
  "main": "dist/main.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/main.js",
    "dev": "ts-node src/main.ts",
    "dev:watch": "nodemon --exec ts-node src/main.ts",
    "dev:bot": "ts-node src/bot/bot.ts",
    "dev:bot:watch": "nodemon --exec ts-node src/bot/bot.ts",
    "dev:all": "concurrently \"npm run dev\" \"npm run dev:bot\""
  },
  "dependencies": {
    "@nestjs/common": "^10.0.0",
    "@nestjs/core": "^10.0.0",
    "@nestjs/platform-express": "^10.0.0",
    "@nestjs/typeorm": "^10.0.0",
    "axios": "^1.6.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.0",
    "dotenv": "^16.3.1",
    "multer": "^1.4.5-lts.1",
    "normalize.css": "^8.0.1",
    "pg": "^8.11.3",
    "react-modal": "^3.16.3",
    "reflect-metadata": "^0.1.13",
    "telegraf": "^4.16.3",
    "typeorm": "^0.3.17"
  },
  "devDependencies": {
    "@types/express": "^4.17.25",
    "@types/multer": "^1.4.13",
    "@types/node": "^20.8.9",
    "concurrently": "^8.2.0",
    "nodemon": "^3.0.1",
    "ts-node": "^10.9.1"
  }
}
